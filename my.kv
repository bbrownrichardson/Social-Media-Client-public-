<PrivateMessenger>:
    GridLayout:
        cols: 1
        BoxLayout:
            Button:
                size_hint: .10, 1
                id: return_to_timeline
                text: 'timeline'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_press: root.manager.current = 'PostScreen'
            Label:
                text: 'Private Message'
        ScrollView:
            size_hint: 1, 4
            Label:
                id: Messenger_Label
                text:
        BoxLayout:
            TextInput:
                size_hint: .9, 2
                id: Messenger_text
                text:
            Button:
                size_hint: .10, 2
                id: Messenger_button
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'send'

<PostScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            Button:
                id: private_messenger_button
                text: 'Send Private\n   Message'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_press: root.manager.current = 'ChoosePMRecipient'
            Button:
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'Refresh Timeline'
                on_press: root.CreatePostWidgets()
        ScrollView:
            GridLayout:
                cols: 1
                id: post_widget

        BoxLayout:
            Button:
                size_hint: .25, .75
                id: post_screen_button
                text: 'Wanna Post?'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_press: root.manager.current = 'ScreenToPost'
            Label:
                text: 'Â® 2017 Brianna, Julia, and David'

<ScreenToPost>:
    GridLayout:
        cols: 1
        Button:
            size_hint: .1, .05
            id: 'cancel_post_button'
            text: 'Cancel'
            background_color: (0.0, 1.0, 1.0, 1.0)
            on_press: root.manager.current = 'PostScreen'
            on_release: root.clear_post_text()

        Label:
            text: 'Post Ya Thoughts Below'
        BoxLayout:
            TextInput:
                id: Post_text
                text:
            Button:
                size_hint: .10,1
                id: Post_button
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'submit'
                on_press: root.update_post()
                on_release: root.manager.current = 'PostScreen'

<ChoosePMRecipient>:
    GridLayout:
        cols: 1

        Label:
            text: 'WHO YOU TRYNA PM??'
            size_hint: 1, .25
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    background_color: (0.0, 1.0, 1.0, 1.0)
                    text: 'cancel'
                    on_release: root.manager.current = 'PostScreen'
                TextInput:
            Button:
                text: 'confirm recipient'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_release: root.manager.current = 'PrivateMessenger'

<CreateUserScreen>:
    GridLayout:
        cols: 1
        Label:
            text: 'WELCOME!!!'
        Label:
            text: 'Choose a Username'
        TextInput:
            id: create_user
            text:
        BoxLayout:
            Button:
                size_hint: .2, 1
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'Already A User?'
                on_release: root.manager.current = 'LoginScreen'
            Button:
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'confirm username'
                on_release: root.createuser()

<LoginScreen>:
    GridLayout:
        cols: 1
        Label:
            text: 'WELCOME BACK! LOGIN'
        Button:
            size_hint: 1, .75
            background_color: (0.0, 1.0, 1.0, 1.0)
            text: 'Create Account'
            on_release: root.manager.current = 'CreateUserScreen'

        BoxLayout:
            rows: 1
            Label:
                text: 'ENTER USERNAME HERE'
            TextInput:
                id: username_login
                text:
        Button:
            background_color: (0.0, 1.0, 1.0, 1.0)
            text: 'Login'
            on_release: root.manager.current = 'PostScreen'