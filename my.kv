<PrivateMessenger>:
    GridLayout:
        cols: 1
        BoxLayout:
            Button:
                size_hint: .15, 1
                id: return_to_timeline
                text: 'TIMELINE'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_press: root.manager.current = 'PostScreen'
            Label:
                id: message_label
                text: 'PRIVATE MESSENGER'
            Button:
                size_hint: .15, 1
                id: refresh_conversation
                text: 'REFRESH\nCONVO'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_release: root.get_all_messages()
        Label:
            id: Messenger_Label
            text:
            size_hint: 1, .3
        ScrollView:
            size_hint: 1, 3
            GridLayout:
                size_hint: 1, 3
                cols: 1
                id: holder_label
        BoxLayout:
            TextInput:
                size_hint: .9, 1
                id: Messenger_text
                text:
            Button:
                size_hint: .10, 1
                id: Messenger_button
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'SEND'
                on_release: root.send_message()
        Label:
            size_hint: 1, .15
            text: '® 2017 Brianna, Julia, and David'

<PostScreen>:
    GridLayout:
        cols: 1
        Button:
            text: 'CONVERSATIONS'
            background_color: (0.0, 1.0, 1.0, 1.0)
            on_release: root.manager.current = 'ConversationScreen'
        BoxLayout:
            Button:
                size_hint: .5, .3
                id: private_messenger_button
                text: 'SEND PRIVATE MESSAGE'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_release: root.manager.current = 'ChoosePMRecipient'
            Label:
                id: welcome_label
                text: 'WELCOME TO YOUR TIMELINE'
                size_hint: 1, .2
            Button:
                size_hint: .5, .3
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'REFRESH TIMELINE'
                on_press: root.CreatePostWidgets()
        ScrollView:
            size_hint: 1, 10
            GridLayout:
                size_hint: 1, 10
                cols: 1
                id: post_widget

        BoxLayout:
            Button:
                size_hint: .15, 1
                id: post_screen_button
                text: 'WANNA POST?'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_press: root.manager.current = 'ScreenToPost'
            Label:
                size_hint: .85, 1
                text: '® 2017 Brianna, Julia, and David'

<ScreenToPost>:
    GridLayout:
        cols: 1
        Button:
            size_hint: .1, .05
            id: 'cancel_post_button'
            text: 'CANCEL'
            background_color: (0.0, 1.0, 1.0, 1.0)
            on_press: root.manager.current = 'PostScreen'
            on_release: root.clear_post_text()

        Label:
            text: 'Post Ya Thoughts Below'
        BoxLayout:
            TextInput:
                id: Post_text
                text:
            Button:
                size_hint: .10,1
                id: Post_button
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'SUBMIT'
                on_press: root.update_post()
        Label:
            size_hint: 1, .05
            text: '® 2017 Brianna, Julia, and David'

<ChoosePMRecipient>:
    GridLayout:
        cols: 1

        Label:
            text: 'WHO YOU TRYNA PM??'
            size_hint: 1, .25
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    background_color: (0.0, 1.0, 1.0, 1.0)
                    text: 'CANCEL'
                    on_release: root.manager.current = 'PostScreen'
                TextInput:
                    id: choose_recipient
            Button:
                id: confirm_recipient
                text: 'CONFIRM RECIPIENT'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_release: root.select_user()
        Label:
            size_hint: 1, .05
            text: '® 2017 Brianna, Julia, and David'

<CreateUserScreen>:
    GridLayout:
        cols: 1
        Image:
            size_hint: 1,3
            source: 'welcome_banner2.jpg'
        Label:
            id: token
            text: 'Choose a Username between 3 - 16 alphanumeric characters'
        TextInput:
            id: create_user
            text:
        BoxLayout:
            Button:
                size_hint: .2, 1
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'BACK TO LOGIN'
                on_release: root.manager.current = 'LoginScreen'
            Button:
                id: create_username
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'CREATE USERNAME'
                on_release: root.create_a_user()
        Label:
            size_hint: 1, .15
            text: '® 2017 Brianna, Julia, and David'

<LoginScreen>:
    GridLayout:
        cols: 1
        Button:
            size_hint: 1, .75
            background_color: (0.0, 1.0, 1.0, 1.0)
            text: 'CREATE ACCOUNT'
            on_release: root.manager.current = 'CreateUserScreen'
        Image:
            size_hint: 1,3
            source: 'welcome_home.png'
        Label:
            text: 'GO AHEAD AND LOGIN BELOW'

        BoxLayout:
            rows: 1
            Label:
                text: 'ENTER USERNAME HERE'
            TextInput:
                id: username_login
                text:
        BoxLayout:
            rows: 1
            Label:
                text: 'ENTER TOKEN HERE'
            TextInput:
                id: token_login
                text:
        Button:
            id: login_button
            background_color: (0.0, 1.0, 1.0, 1.0)
            text: 'LOGIN'
            on_release: root.kivy_login()
        Label:
            size_hint: 1, .15
            text: '® 2017 Brianna, Julia, and David'

<UserInfoScreen>:
    GridLayout:
        cols: 1
        Label:
            text: 'Remember This!'
        Label:
            id: user_and_token
            text:
        Button:
            id: continue
            text: 'Got It'
            on_release: root.manager.current = 'PostScreen'



<ConversationScreen>:
    GridLayout:
        cols: 1
        BoxLayout:
            Button:
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'TIMELINE'
                on_release: root.manager.current = 'PostScreen'
            Label:
                id: conversaton_label
                text: 'PREVIOUS CONVERSATIONS'
            Button:
                text: 'GET CONVERSATIONS'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_release: root.get_conversation_list()
        ScrollView:
            size_hint: 1, 5
            GridLayout:
                size_hint: 1, 3
                id: conversation_holder
                cols:1