<PrivateMessenger>:
    GridLayout:
        cols: 1
        BoxLayout:
            Button:
                id: return_to_timeline
                text: 'timeline'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_press: root.manager.current = 'PostScreen'
            Label:
                text: 'Private Message'
        ScrollView:
            Label:
                id: Messenger_Label
                text:
        BoxLayout:
            TextInput:
                size:
                id: Messenger_text
                text:
            Button:
                size_hint: .10,1
                id: Messenger_button
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'send'

<PostScreen>:
    GridLayout:
        cols: 1
        Button:
            size_hint: 0.5, 0.25
            id: private_messenger_button
            text: 'Send Private\n   Message'
            background_color: (0.0, 1.0, 1.0, 1.0)
            on_press: root.manager.current = 'PrivateMessenger'
        ScrollView:
            Label:
                id: post_label
        GridLayout:
            Button:
                id: post_screen_button
                text: 'Wanna Post?'
                background_color: (0.0, 1.0, 1.0, 1.0)
                on_press: root.manager.current = 'ScreenToPost'

<ScreenToPost>:
    GridLayout:
        cols: 1
        Button:
            size_hint: .1, .05
            id: 'cancel_post_button'
            text: 'Cancel'
            background_color: (0.0, 1.0, 1.0, 1.0)
            on_press: root.manager.current = 'PostScreen'
            on_release: root.clear_post_text()

        Label:
            text: 'Post Ya Thoughts Below'
        BoxLayout:
            TextInput:
                id: Post_text
                text:
            Button:
                size_hint: .10,1
                id: Post_button
                background_color: (0.0, 1.0, 1.0, 1.0)
                text: 'submit'

